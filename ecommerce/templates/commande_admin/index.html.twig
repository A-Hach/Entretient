

{% extends 'base.html.twig' %}

{% block body %}
<div class="example-wrapper">
    <h1>List of orders</h1>
    <table>
        <thead>
            <tr>
                <th>Order number</th>
                <th>Customer</th>
                <th>Date</th>
                <th>Total</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for commande in commandes %}
                <tr>
                    <td>{{ commande.id }}</td>
                    <td>{{ commande.user.name }} || {{ commande.user.email }}</td>
                    <td>{{ commande.date | date('Y-m-d') }}</td>
                    <td>{{ commande.getTotal() }}</td>
                    <td>
                        <a href="{{ path('app_commandes_admin_show', { id: commande.id }) }}">Show</a>
                        <a href="{{ path('app_commandes_admin_delete', { id: commande.id }) }}">Delete</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
<style>
    .example-wrapper {
        width: 100%;
        max-width: 800px;
        padding: 20px;
        margin: 0 auto;
    }

    .example-wrapper h1 {
        text-align: center;
    }

    .example-wrapper table {
        border-collapse: collapse;
        width: 100%;
    }

    .example-wrapper th {
        background-color: #4CAF50;
        color: white;
    }

    .example-wrapper th, .example-wrapper td {
        padding: 8px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }
</style>
{% endblock %}

