{% extends 'base.html.twig' %}

{% block title %}Hello CategorieAdminController!{% endblock %}

{% block body %}
<style>
    table {
        border-collapse: collapse;
        width: 100%;
    }

    th, td {
        text-align: left;
        padding: 8px;
    }

    tr:nth-child(even) {
        background-color: #f2f2f2;
    }

    th {
        background-color: #4CAF50;
        color: white;
    }
</style>

<h1>Categorie List</h1>
<table>
    <tr>
        <th>Id</th>
        <th>Name</th>
    </tr>
    {% for categorie in categories %}
        <tr>
            <td>{{ categorie.id }}</td>
            <td>{{ categorie.name }}</td>
            <td><a href="{{ path('app_categories_admin_edit', {id: categorie.id}) }}">Edit</a></td>
            <td><a href="{{ path('app_categories_admin_delete', {id: categorie.id}) }}">Delete</a></td>
        </tr>
    {% endfor %}
</table>
<a href="{{ path('app_categories_admin_new') }}">Add New</a>
{% endblock %}

